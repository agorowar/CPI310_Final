<DOCTYPE !HTML>
    <html>
        <head>
            <!-- add bootstrap, css and fonts to head -->
            <link rel="stylesheet" type="text/css" href="/style.css">

            <!-- bootstrap css file. needed for bootstrap.  the design features in bootsrap are all just classes that get controlled in a css file-->
            <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
            

            <link href="https://fonts.googleapis.com/css?family=Alata|Roboto&display=swap" rel="stylesheet">

            
        </head>

        <body>
            <script type="text/javascript" src="/testMatch.js"></script>

            <!-- add navbar to the top of the body -->
                <nav class="navbar navbar-expand-lg navbar-light" style = "background-color: #63A779; font-family: 'Alata', sans-serif;">
                <a class="navbar-brand" href="/">Paw Me Maybe</a> <!--title on the navbar that also functions as a link to the homepage -->
                <!-- <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"> -->
                <!-- <span class="navbar-toggler-icon"></span> -->
            
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <a class="navbar-brand" href="/">
                        <img src="redAsset.png" width="30" height="30" alt="">
                    </a>
                    <li class="nav-item">
                    <a class="nav-link" href="profile">Your Profile</a> 
                    </li>
                    <li class="nav-item">
                    <a class="nav-link" href="petProfile">Your Pets</a> 
                    </li>
                    <li class="nav-item">
                    <a class="nav-link" href="matching">Match with Pets</a> 
                    </li>
                    <li class="nav-item">
                    <a class="nav-link" href="logout">Logout</a>
                    </li>
                </ul>
                </div>
            </nav>
        <div id ="matching_gradient">
            <div class = "top"> <!-- header -->
                <h1>Your Matches</h1>
            </div>

            <div class = "feed" id = "feed">   <!-- feed -->
                <!-- container 1-->
                {{#each user}}
                <div class = "container" id = "container1"> <!-- match container -->
                    <div class = "owner"> <!-- owner container -->
                        <div class = "ownerPic"> <!-- owner picture -->
                            {{#each image}}
                            <img src="/profileimages/{{this.fileName}}" width="200">
                            {{/each}}
                        </div>
    
                        <div class = "ownerInfo"> <!-- owner info -->
                            <p>Name:{{this.name}}</p>
                            <p>Bio:{{this.bio}}</p>
                        </div>
                    </div>
                    {{/each}}
                    {{#each pet}}
                    <div class = "pets"> <!-- pets container -->
                        <!-- pet 1 -->
                        <div class = "petContainer"> 
                            <div class = "petPic"> <!-- pet1 pic -->
                                <!-- needs to add this profile's 1st pet's pic to page -->
                                <iframe height = 100% width = 100% frameborder="0"></iframe>
                            </div>
    
                            <div class = "petInfo"> <!-- pet1 info -->
                                <!-- needs to add this profile's 1st pet's info to page -->
                                <p>Name:{{this.petname}}</p>
                                <p>{{this.petbio}}</p>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
                
                
        </body>
    </html>